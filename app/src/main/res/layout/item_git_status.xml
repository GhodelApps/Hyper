<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conflicting"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/status_conflicting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Added"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/status_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Changed"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/status_changed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Missing"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/status_missing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modified"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/status_modified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Removed"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/status_removed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uncommitted Changes"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/status_uncommitted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Untracked"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/status_untracked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Untracked Folders"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/status_untracked_folders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>