<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/log_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/log_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/log_details"
        android:layout_toStartOf="@id/log_details"
        android:layout_toRightOf="@+id/log_level"
        android:layout_toEndOf="@id/log_level"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/log_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="italic" />

</RelativeLayout>